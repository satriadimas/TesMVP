<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.satriadimaspermana.tesmvp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KALKULATOR SEDERHANA"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <Button
        android:onClick="kePenjumlahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Penjumlahan"
        android:id="@+id/btnPenjumlahan"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

    <Button
        android:onClick="kePengurangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pengurangan"
        android:id="@+id/btnPengurangan"
        android:layout_below="@+id/btnPenjumlahan"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="kePerkalian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perkalian"
        android:id="@+id/btnPerkalian"
        android:layout_below="@+id/btnPengurangan"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="kePembagian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pembagian"
        android:id="@+id/btnPembagian"
        android:layout_below="@+id/btnPerkalian"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
